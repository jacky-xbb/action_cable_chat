<div class="shadow-lg flex justify-between px-6 py-4 items-center">
  <%= link_to image_tag("logo.png", class: "w-16"), root_path %>

  <div class="flex flex-col items-center space-y-2">
    <div class="flex space-x-2 items-center">
      <% if signed_in? %>
        <p class="text-sm text-gray-500"><%= current_user.email %></p>
        <%= button_to t("nav.log_out"), destroy_user_session_path, class: "button-dark", method: :delete %>
      <% else %>
        <%= link_to t("nav.log_in"), new_user_session_path, class: "button-dark" %>
      <% end %>
    </div>

    <div class="text-xs text-gray-500">
      <%= link_to 'English', locale: 'en' %> |
      <%= link_to '简体中文', locale: 'zh-CN' %>
    </div>
  </div>
</div>
